<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <paztechnologies.com.meribus.font.MyTextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_txt"
        android:text="Log In"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/google_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_txt"
        android:weightSum="2"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/google_icn"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/fb_icn"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/or"
        android:layout_below="@+id/google_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/or"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Username"
        android:textColorHint="@color/textcolor"
        android:textSize="20dp"
        android:textColor="@color/textcolor"
        android:layout_below="@+id/or"
        android:background="@drawable/input_outline"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/textcolor"
        android:textColorHint="@color/textcolor"

        android:layout_below="@+id/username"
        android:background="@drawable/input_outline"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Log In"
        android:textColor="#ffffff"
        android:textSize="19dp"
        android:layout_below="@+id/password"
        android:background="@drawable/custom_edittext"/>
</RelativeLayout>
</ScrollView>